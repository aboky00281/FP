    <canvas id="bg-canvas"></canvas>

    <!-- ส่วนคอนเทนเนอร์หลัก (อยู่เหนือ Canvas) -->
    <!-- ใช้ h-full และ overflow-y-auto เพื่อให้เนื้อหาเลื่อนได้ภายในกรอบหากจำเป็น แต่ซ่อน scrollbar ไว้ -->
    <main class="flex-grow z-10 relative h-full overflow-y-auto no-scrollbar">
        <div class="min-h-full flex flex-col items-center justify-center py-6 px-4 sm:px-6 lg:px-8 w-full">

            <div class="text-center mb-6 md:mb-8 max-w-2xl mx-auto w-full">
                <!-- ไอคอนหัวเรื่อง (ลดขนาดลง) -->
                <i class="ph-fill ph-fire text-4xl md:text-5xl text-orange-400 mb-2 inline-block"></i>
                
                <!-- หัวข้อหลัก (ลดขนาดลง) -->
                <h1 class="text-2xl md:text-4xl font-bold text-white leading-tight">
                    Fire Protection Engineering Hub
