        <div class="bg-white p-4 rounded-lg shadow-xl relative max-w-3xl max-h-full overflow-auto"><button class="absolute top-2 right-2 text-gray-700 hover:text-gray-900 text-2xl font-bold" onclick="closeImagePopup()">&times;</button><img id="popupImage" src="" alt="NFPA Table" class="w-full h-auto rounded-lg"></div>
    </div>

    <script>
        // --- DOM Elements ---
        const allViews = document.querySelectorAll('.calculator-view, #tools-hub-view');
        const modal = document.getElementById('message-modal');
        const modalTitle = document.getElementById('modal-title');
        const modalMessage = document.getElementById('modal-message');
        const modalCloseBtn = document.getElementById('modal-close-btn');

        // --- View Switching Logic ---
        function switchView(targetId) {
            allViews.forEach(view => {
                if (view.id === targetId) {
                    view.classList.remove('hidden');
                } else {
                    view.classList.add('hidden');
                }
            });
        }

        // --- Hub Functions ---
        function showComingSoonModal(title) {
            modalTitle.textContent = title;
            modalMessage.textContent = 'ฟังก์ชันนี้กำลังอยู่ในการพัฒนา จะพร้อมใช้งานเร็วๆ นี้';
            modal.classList.remove('hidden');
        }
        function hideModal() {
            modal.classList.add('hidden');
        }

        // --- Event Listeners for Hub ---
        modalCloseBtn.addEventListener('click', hideModal);
        modal.addEventListener('click', (event) => { if (event.target === modal) hideModal(); });
        
        document.querySelectorAll('.btn-back-to-hub').forEach(btn => btn.addEventListener('click', () => switchView('tools-hub-view')));
        document.getElementById('tool-pump-sizing').addEventListener('click', () => switchView('calculator-view-pump-sizing'));
        document.getElementById('tool-friction-loss').addEventListener('click', () => switchView('calculator-view-friction-loss'));
        
        ['tool-hydraulic-calc', 'tool-detector-spacing', 'tool-egress-width', 'tool-code-lookup'].forEach(id => {
            document.getElementById(id).addEventListener('click', (e) => {
                const toolName = e.currentTarget.querySelector('h2').textContent;
                showComingSoonModal(toolName);
            });
        });

        // --- PUMP CALCULATOR SCRIPT ---
        const NFPA_DATA = { 'light': { density_gpm_sqft: 0.10, hose_allowance_gpm: 100 }, 'ordinary1': { density_gpm_sqft: 0.15, hose_allowance_gpm: 250 }, 'ordinary2': { density_gpm_sqft: 0.20, hose_allowance_gpm: 250 }, 'extra1': { density_gpm_sqft: 0.30, hose_allowance_gpm: 500 }, 'extra2': { density_gpm_sqft: 0.40, hose_allowance_gpm: 500 } };
        let pumpCurveChart;
        window.SQ_M_TO_SQ_FT = 10.7639;
        window.US_GALLONS_TO_CUBIC_METERS = 0.00378541;
        window.DEFAULT_PUMP_RATED_HEAD_PSI = 100;
        Chart.register(ChartDataLabels);
        function showImagePopup(imageUrl) { document.getElementById('popupImage').src = imageUrl; document.getElementById('imagePopupModal').classList.remove('hidden'); }
        function closeImagePopup() { document.getElementById('imagePopupModal').classList.add('hidden'); }
        function calculatePump() { /* ... Pump calculation logic ... */ }
        function clearPumpData() { /* ... Pump clear logic ... */ }
        function updatePumpCurveChart(pumpRatedFlow, totalRequiredFlow, systemDemandHeadEffective, pumpType) { /* ... Chart update logic ... */ }
        function printPumpChart() { document.body.dataset.printing = 'pump-sizing'; window.print(); delete document.body.dataset.printing; }
        
        // --- FRICTION LOSS CALCULATOR SCRIPT ---
        const steelPipeID = { "0.5": 0.622, "0.75": 0.824, "1": 1.049, "1.25": 1.380, "1.5": 1.610, "2": 2.067, "2.5": 2.469, "3": 3.068, "4": 4.026, "5": 5.047, "6": 6.065, "8": 7.981, "10": 10.020, "12": 11.938 };
        const pvcPipeID = { "0.5": 0.622, "0.75": 0.824, "1": 1.049, "1.25": 1.380, "1.5": 1.610, "2": 2.067, "2.5": 2.469, "3": 3.068, "4": 4.026, "5": 5.047, "6": 6.065, "8": 7.981, "10": 10.020, "12": 11.938 };
        function calculateFrictionLoss(Q, L, D, C) { if (Q === 0 || L === 0) return 0; if (D === 0 || C === 0) return Infinity; return (14.83 * Math.pow(Math.abs(Q), 1.852) * L) / (Math.pow(C, 1.852) * Math.pow(D, 4.87)); }
        function updateCustomCFactor() { const cFactorSelect = document.getElementById('cFactor'); const customCFactorInput = document.getElementById('customCFactor'); if (cFactorSelect.value === 'custom') { customCFactorInput.classList.remove('hidden'); } else { customCFactorInput.classList.add('hidden'); } updatePipeDiameterInput(); }
        function updatePipeDiameterInput() { const cFactorSelect = document.getElementById('cFactor'); const nominalPipeSizeSelect = document.getElementById('nominalPipeSize'); const pipeDiameterInput = document.getElementById('pipeDiameter'); const materialType = cFactorSelect.options[cFactorSelect.selectedIndex].dataset.material; const selectedNPS = nominalPipeSizeSelect.value; let diameterValue = ''; if (selectedNPS) { if (materialType === 'plastic' && pvcPipeID[selectedNPS]) { diameterValue = pvcPipeID[selectedNPS].toFixed(3); } else if ((materialType === 'black_steel' || materialType === 'galvanized_steel') && steelPipeID[selectedNPS]) { diameterValue = steelPipeID[selectedNPS].toFixed(3); } } pipeDiameterInput.value = diameterValue; }
        function calculateHazenWilliams() { const Q = parseFloat(document.getElementById('flowRate').value); const L = parseFloat(document.getElementById('pipeLength').value); const D = parseFloat(document.getElementById('pipeDiameter').value); let H = parseFloat(document.getElementById('elevationChange').value); if (isNaN(H)) H = 0; let C = document.getElementById('cFactor').value === 'custom' ? parseFloat(document.getElementById('customCFactor').value) : parseFloat(document.getElementById('cFactor').value); const resultDiv = document.getElementById('result'); const errorDiv = document.getElementById('error-message'); errorDiv.classList.add('hidden'); resultDiv.classList.add('hidden'); if (isNaN(Q) || isNaN(L) || isNaN(D) || isNaN(C) || Q < 0 || L < 0 || D <= 0 || C <= 0 || H < 0) { errorDiv.textContent = 'กรุณาป้อนค่าที่ถูกต้อง'; errorDiv.classList.remove('hidden'); return; } const P_friction = calculateFrictionLoss(Q, L, D, C); const P_elevation = H * 1.422; const P_total = P_friction + P_elevation; resultDiv.innerHTML = `<table><tr><td>แรงดันสูญเสีย (Friction):</td><td>${P_friction.toFixed(2)} psi</td></tr><tr><td>แรงดัน (Elevation):</td><td>${P_elevation.toFixed(2)} psi</td></tr><tr class="total-pressure-row"><td>แรงดันรวม (Total):</td><td>${P_total.toFixed(2)} psi</td></tr></table>`; resultDiv.classList.remove('hidden'); }
        function clearHazenWilliamsInputs() { document.getElementById('flowRate').value = ''; document.getElementById('cFactor').value = '120'; document.getElementById('nominalPipeSize').value = ''; document.getElementById('pipeDiameter').value = ''; document.getElementById('pipeLength').value = ''; document.getElementById('elevationChange').value = ''; document.getElementById('result').classList.add('hidden'); document.getElementById('error-message').classList.add('hidden'); updateCustomCFactor(); }
        function toggleFormulaDisplay() { document.getElementById('formulaContent').classList.toggle('hidden'); }
        
        // Initial setup
        document.addEventListener('DOMContentLoaded', () => {
             switchView('tools-hub-view');
             updateCustomCFactor();
        });
    </script>
